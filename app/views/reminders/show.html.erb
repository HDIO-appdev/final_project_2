<div class="page-header">
  <h3>Reminder #<%= @reminder.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Focus</dt>
      <dd><%= @reminder.focus %></dd>

      <dt>Mindset</dt>
      <dd><%= @reminder.mindset %></dd>

      <dt>Example</dt>
      <dd><%= @reminder.example %></dd>

      <dt>Goal</dt>
      <dd>
        <% if @reminder.goal.present? %>
          <a href="/goals/<%= @reminder.goal_id %>">
            <%= @reminder.goal.name %>
          </a>
        <% end %>
      </dd>

      <dt>User</dt>
      <dd>
        <% if @reminder.user.present? %>
          <a href="/users/<%= @reminder.user_id %>">
            <%= @reminder.user.email %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/reminders" class="btn btn-primary">
        Back
      </a>
      <% if current_user == @reminder.user %>
        <a href="/reminders/<%= @reminder.id %>/edit" class="btn btn-warning">
          Edit
        </a>
        <a href="/delete_reminder/<%= @reminder.id %>" class="btn btn-danger" rel="nofollow">
          Delete
        </a>
      <% end %>
    </div>
  </div>
</div>
